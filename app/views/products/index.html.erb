<h1>Hi</h1>
<% if @products.empty? %>
    <h2> Product list is empty</h2>

<% else %>
    <table>
      <tr>
        <th>Id</th>
        <th>Product Name</th>
        <th>Cost Price</th>
        <th>Min Value</th>
        <th>Type</th>
        <th>Edit</th>
        <th>Remove</th>
       </tr>

      <% @products.each do |product| %>
      <tr>
        <th><%= product.id%></th>
        <th><%= product.name%></th>

        <th><%=  link_to  product.name.to_s, product_path(product), method: :show %></th>
        <th><%= product.cost_price%></th>
        <th><%= product.min_value%></th>
        <th><%= product.product_type%></th>


        <td><%= link_to 'edit', edit_product_path(product)  %></td>
        <td><%= link_to 'remove', product_path(product),method: :delete, data: { :confirm=> 'Are you sure?'} %> </td>
          </tr>
    <%end%>
    </table>
<% end %>