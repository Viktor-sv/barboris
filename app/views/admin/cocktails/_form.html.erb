<div class="media-body panel-default">

  <div class="panel-body col-md-6">
    <p>
       <%= form_field_text(f,:name) %>
       <%= form_field_text(f,:description) %>
       <%= f.label :ingredients %>
    </p>

    <hr>

    <%= f.fields_for :ingredients do | ingredient_form| %>

          <div class='col-sm-10' >
      <%=  ingredient_form.label :value %>
      <%=  ingredient_form.number_field (:value) %>
      <%=  ingredient_form.label :product %>
      <%=  ingredient_form.collection_select(:product_id, Product.all, :id, :name, :prompt=> true) %>
          </div>

    <%end%>


    <div class='col-sm-10' >
      <%= image_tag(@cocktail.image_url, size: '380', class: 'img_thumbnail') if @cocktail.image? %>
    </div>
      <div class='col-sm-3'>
      <%= f.file_field :image, multiple: false %>
    </div>
    <div class="actions form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%=f.submit "Save"%>
      </div>
    </div>

  </div>
</div>



