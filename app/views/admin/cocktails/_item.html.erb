<div class="col-md-4">
  <h2><%= f.name %></h2>
  <p><%= f.description %></p>
  <p>

    <% if @cocktails.empty? %>
      <h2> Cocktails list is emtpy</h2>
  <%else%>
      <div class='col-sm-10'>
        <table class="table table-condensed">
          <thead>
            <tr>
              <th> Id </th>
              <th> Value </th>
              <th> Price </th>
            </tr>
          </thead>
          <tbody>
            <td><%= f.id %> </td>
            <td><%= f.value %> </td>
            <td><%= f.price %> </td>
          </tbody>
        </table>
      </div>

      <% if f.image? %>
            <div class='field form-group' >
              <div class='col-md-2 control-label' > </div>
              <div class='col-sm-5' >
                <!-- %= f.check_box :remove_image  %> Remove image -->
              </div>
            </div>
            <div class="field form-group">
              <div class="col-sm-2 control-label"> </div>
              <div class='col-sm-10' >
                <%= image_tag(f.image_url, size: '380', class: 'img_thumbnail') if f.image? %>
              </div>
            </div>
            <%else %>
            <h2> NO IMAGE :(</h2>
        <%end%>

       <div class='col-sm-10'>
           <a href="<%=edit_admin_cocktail_path(f) %>" class="btn btn-info" role="button"> Edit </a>
        </div>
          <br>
        <div class='col-sm-10'>
          <a href="<%=admin_cocktail_path(f) %>" class="btn btn-info" role="button">Remove</a>
        </div>

      </table>
  <%end %>

  </p>
</div>